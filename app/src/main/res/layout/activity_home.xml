<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.yisquare.ibms.activity.HomeActivity">
    <!--上半部分-->
    <RelativeLayout
        android:id="@+id/rl_home_partA"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/background_home">
        <!--蓝条-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_blue_alpha"
            >
            <!--我完成的-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/tv_home_lable_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="我完成的"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_home_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black1"
                    android:text="1134单"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_home_lable_done"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    />
            </RelativeLayout>
            <!--我的总工时-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv_icenter_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="我的总工时"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_home_alltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black1"
                    android:text="1124小时"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_icenter_material"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>
            <!--求助次数-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                >
                <TextView
                    android:id="@+id/tv_home_lable_helptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="求助次数"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_home_helptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black1"
                    android:text="12次"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_home_lable_helptime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <!--中间头像-->
        <ImageView
            android:id="@+id/iv_home_userhand"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@mipmap/userhead_pic"
            android:padding="3dp"
            android:background="@drawable/userhend"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />
        <!--电话-->
        <ImageView
            android:id="@+id/iv_home_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:background="@drawable/home_call_phone"
            android:src="@mipmap/call_icon"
            android:padding="14dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/iv_home_userhand"
             />
        <!--消息-->
        <ImageView
            android:id="@+id/iv_home_msg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:background="@drawable/home_msg"
            android:src="@mipmap/msg_icon"
            android:padding="14dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_home_userhand"
            android:clickable="true"
            android:onClick="onClickMsg"
            />
        <!--消息小红点-->
        <ImageView
            android:id="@+id/iv_home_msg_point"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:scaleType="centerInside"
            android:background="@drawable/home_red_point"
            android:layout_alignRight="@id/iv_home_msg"
            android:layout_alignTop="@id/iv_home_msg"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            />
        <!--用户名-->
        <TextView
            android:id="@+id/tv_home_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毕开宇"
            android:textSize="17sp"
            android:textColor="@color/black2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_home_userhand"
            android:layout_marginTop="13dp"
            android:paddingRight="55dp"
            />
        <!--执行中-->
        <TextView
            android:id="@+id/tv_home_running"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:background="@drawable/home_running"
            android:layout_alignBottom="@id/tv_home_username"
            android:layout_alignRight="@id/tv_home_username"
            android:layout_marginRight="10dp"
            android:text="执行中"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="8sp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_username"
            >
            <!--所在部门-->
            <TextView
                android:id="@+id/tv_home_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修运营部"
                android:textSize="16sp"
                android:textColor="@color/black2"
                android:layout_below="@id/tv_home_username"
                />
            <!--职位-->
        <TextView
            android:id="@+id/tv_home_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运营主管"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black2"
            />
        </LinearLayout>

    </RelativeLayout>
    <!--下半部分-->
    <RelativeLayout
        android:id="@+id/rl_icenter"
        android:layout_below="@id/rl_home_partA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_search_bg"
        >
        <!--个人信息-->
        <RelativeLayout
            android:id="@+id/rl_icenter_myinfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/iv_icenter_myinfo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/chilun_white"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:padding="9dp"
                android:background="@drawable/home_green_point"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/iv_icenter_myinfo"
                android:layout_centerVertical="true"
                >
            </TextView>
        </RelativeLayout>
        <!--我的物料清单-->
        <RelativeLayout
            android:id="@+id/ll_icenter_material"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_below="@id/rl_icenter_myinfo"
            android:layout_marginTop="1dp"
            >
            <ImageView
                android:id="@+id/iv_icenter_material"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/my_order_white"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:padding="9dp"
                android:background="@drawable/home_yellow_point2"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的物料清单"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/iv_icenter_material"
                android:layout_centerVertical="true"
                >
            </TextView>
        </RelativeLayout>
        <!--我获得的评价-->
        <RelativeLayout
            android:id="@+id/ll_icenter_evaluate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_below="@id/ll_icenter_material"
            android:layout_marginTop="1dp"
            >
            <ImageView
                android:id="@+id/iv_icenter_evaluate"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/evaluate"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我获得的评价"
                android:textColor="@color/black1"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/iv_icenter_evaluate"
                android:layout_centerVertical="true"
                >
            </TextView>
        </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>
