<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<ImageView
    android:id="@+id/iv_msg_item_userhead_icon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:scaleType="centerInside"
    android:src="@mipmap/smlv_item_system_left"
    android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/tv_help_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_msg_item_userhead_icon"/>
    <TextView
        android:id="@+id/tv_item_msg_type_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:text="中间行,描述故障设备"
        android:layout_below="@id/tv_help_item_title"
        android:layout_alignLeft="@id/tv_help_item_title"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_item_msg_from_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_help_item_title"
        android:layout_below="@id/tv_item_msg_type_lable"
        android:text="多长时间以前停止的"
        android:textSize="12sp"
        android:textColor="@color/gray_text"
        />
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/smlv_item_time_right"
        >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_slmv_item_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textSize="16sp"
                android:textColor="@color/text_slmv_item_time_right"
                />
            <TextView
                android:id="@+id/tv_slmv_item_unit_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="10sp"
                android:layout_toRightOf="@id/tv_slmv_item_time_right"
                android:layout_alignBottom="@id/tv_slmv_item_time_right"
                android:textColor="@color/text_slmv_item_time_right"
                android:paddingBottom="2dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>