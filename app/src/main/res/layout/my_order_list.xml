<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">
    <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rl_close_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_slmv_item_time_right">
        <ImageView
            android:id="@+id/iv_title_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/goback_white"
            android:padding="17dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_title_option"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@mipmap/option_white"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:onClick="createOrder"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/iv_title_option"
            android:src="@mipmap/scan"
            android:layout_centerVertical="true"
            android:padding="10dp"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray2"
            >


            <!--第一行-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/iv_home_range_userhend_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/userhead_pic"
                    android:layout_marginLeft="@dimen/tv_marginleft2"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_home_range_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black2"
                    android:lineSpacingExtra="3dp"
                    android:text="【订单编号】zy201601121202001"
                    android:layout_alignTop="@id/iv_home_range_userhend_icon"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tv_home_range_msg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:lineSpacingExtra="3dp"
                    android:text="赵二虎"
                    android:textSize="10sp"
                    android:layout_alignBottom="@id/tv_home_range_msg"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_below="@id/tv_home_range_msg"
                    android:layout_alignLeft="@id/tv_home_range_msg"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_home_range_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black2"
                    android:lineSpacingExtra="3dp"
                    android:text="卓越中心城4栋34层空调新风机故障"
                    android:layout_below="@id/view_line"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tv_home_range_msg_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_blue_start"
                    android:lineSpacingExtra="3dp"
                    android:text="0.0￥"
                    android:textSize="10sp"
                    android:layout_alignBottom="@id/tv_home_range_detail"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="24dp"
                    />
                <TextView
                    android:id="@+id/tv_home_range_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_home_range_msg"
                    android:layout_below="@id/tv_home_range_detail"
                    android:layout_marginTop="5dp"
                    android:text="2016/1/2 15:23"
                    android:textColor="@color/gray3"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/tv_home_range_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_home_range_detail"
                    android:layout_marginTop="8dp"
                    android:text="维修费用"
                    android:textColor="@color/gray_text"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    />
                <View
                    android:id="@+id/item_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_home_range_time"
                    android:background="@color/gray"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/item_line2"
                    android:gravity="center"
                    android:text="工单进行中.."
                    android:textColor="@color/red1"
                    />
            </RelativeLayout>
            <!--第二行-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
