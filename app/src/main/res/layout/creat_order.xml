<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">
    <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rl_close_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_slmv_item_time_right">
        <ImageView
            android:id="@+id/iv_title_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/goback_white"
            android:padding="17dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成工单"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/iv_title_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交工单"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_fix_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工单内容"
        android:textColor="@color/black2"
        android:layout_marginLeft="@dimen/tv_marginleft"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <!--第一行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单编号"
            android:textColor="@color/black2"
            android:layout_marginLeft="@dimen/tv_marginleft"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black5"
            android:text="zy201612110293001"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft_second"
            />
    </RelativeLayout>
    <!--第二行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/tv_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="紧急程度"
            android:textColor="@color/black2"
            android:layout_marginLeft="@dimen/tv_marginleft"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black5"
            android:text="二级"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft_second"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/jiahao_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <!--第三行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/tv_third_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关因素"
            android:textColor="@color/black2"
            android:layout_marginLeft="@dimen/tv_marginleft"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black5"
            android:text="空调"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tv_marginleft_second"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/jiahao_blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <!--第三行-->

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单描述"
            android:textColor="@color/black2"
            android:layout_marginLeft="@dimen/tv_marginleft"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/tv_marginleft_second"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="@string/gongdanmiaoshu"
            android:textColor="@color/black5"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
</LinearLayout>