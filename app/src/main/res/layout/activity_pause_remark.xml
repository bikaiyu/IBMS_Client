<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.yisquare.ibms.activity.Main2Activity"
    android:background="@color/gray2"
    >
    <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rl_close_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/text_slmv_item_time_right">
        <ImageView
            android:id="@+id/iv_title_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:src="@mipmap/goback_white"
            android:onClick="remark_goback"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停备注"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:onClick="remark_send"
            />

    </RelativeLayout>
    <!-- 下拉列表 -->
    <EditText
        android:id="@+id/et_pause_remark"
        android:layout_below="@id/rl_close_title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:hint="备注信息"
        android:textColor="@color/black2"
        android:gravity="start"
        android:padding="15dp"/>
</RelativeLayout>
